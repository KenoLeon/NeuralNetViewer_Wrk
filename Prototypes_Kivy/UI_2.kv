GridLayout:
    cols: 1
    padding: 4
    spacing: 4
    ToggleButton:
        id: playStop
        font_size: 14
        text: 'Play'
        background_normal: ''
        background_color: .2,.2,.2,1
        height: 40
        on_press: app.playStop()
        on_state: self.text = 'Stop'if self.state == 'down' else 'Play'
        size: 200, 40
        size_hint: None, None

    GridLayout:
        width: 200
        padding: 4
        cols: 4
        Label:
            color: 0.6,0.6,0.6,1
            text: 'FPS ~'
            font_size: 14
            size_hint: None,None
            height: 40
        Button:
            text: '-'
            background_normal: ''
            background_color: .2,.2,.2,1
            size_hint: .25,None
            height: 40
            on_press: app.updateFPS(False)
        Label:
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            color: 0.6,0.6,0.6,1
            text: str(app._FPS)
            font_size: 14
            size_hint: 0.25,0
            height: 40
        Button:
            text: '+'
            background_normal: ''
            background_color: .2,.2,.2,1
            size_hint: .25,None
            height: 40
            on_press: app.updateFPS(True)
    Widget:
        size: 200, 44
        size_hint: None, None

    ToggleButton:
        font_size: 14
        text: 'Connect'
        background_normal: ''
        background_color: .2,.2,.2,1
        height: 40
        on_press: app.toggleConnect()
        size: 200, 40
        size_hint: None, None
